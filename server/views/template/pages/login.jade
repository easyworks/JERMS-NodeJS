        link(type="text/css" rel="stylesheet" href="/widgets/bootstrap/dist/css/bootstrap.min.css")
        link(type="text/css" rel="stylesheet" href="/widgets/animate.css/animate.min.css")
        link(type="text/css" rel="stylesheet" href="/widgets/font-awesome/css/font-awesome.min.css")
